pipeline {
    agent any
    environment {
        DOCKER_IMAGE = 'arunchan2024/react-app'
        DOCKER_HUB_USER = 'arunchan2024'
        DOCKER_HUB_PASSWORD = '770Game r'
        AWS_CREDENTIALS = credentials('3822fb7f-a862-4c87-ae5f-1a9454a28769')
        EC2_INSTANCE = 'ec2-user@34.220.2.75'
        SSH_KEY_PATH = '/Users/Arun Ravichandran/Downloads/arun_test_key1.pem'
    }
    stages {
        stage('Checkout') {
            steps {
                // Checkout the code from GitHub
                git branch: 'dev', url: 'https://github.com/ArunRavi16/my-react-app.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    // Execute the build script
                    sh './build.sh'
                }
            }
        }

        stage('Push Docker Image to Docker Hub') {
            steps {
                script {
                    docker.withRegistry('', "${DOCKER_HUB_USER}:${DOCKER_HUB_PASSWORD}") {
                        docker.image("${DOCKER_IMAGE}:latest").push()
                    }
                }
            }
        }

        stage('Deploy to AWS EC2') {
            steps {
                script {
                    // Execute the deployment script
                    sh './deploy.sh'
                }
            }
        }
    }
    post {
        success {
            echo 'Deployment completed successfully!'
        }
        failure {
            echo 'Deployment failed!'
        }
    }
}
